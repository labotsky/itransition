- content_for :sign do
  = stylesheet_link_tag 'static_pages/sign'
= render "static_pages/header"
.container
  %div.form-signin
    %h4 Resend confirmation instructions
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.text_field :email, :autofocus => true, :placeholder => "Email", class: "input-block-level"
      = f.submit "Resend confirmation instructions", class: "btn btn-large btn-primary"
    = render "devise/shared/links"
