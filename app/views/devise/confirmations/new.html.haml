= render "layouts/header"
.span9
  %div.form-signin
    %h4=t('resend_d')
    = form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.text_field :email, :autofocus => true, :placeholder => "Email", class: "input-block-level"
      = f.submit t('resend_d'), class: "btn btn-large btn-primary"
    = render "devise/shared/links"
