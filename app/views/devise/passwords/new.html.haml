= render "layouts/header"
.span9
  %div.form-signin
    %h3.form-signin-heading=t('forgot_d')
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.text_field :email, :autofocus => true, :placeholder => "Email", class: "input-block-level"
      = f.submit t('send_d'), class: "btn btn-large btn-primary"
      %br
      %br
      = render "devise/shared/links"