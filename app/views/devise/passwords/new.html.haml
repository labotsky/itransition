- content_for :sign do
  = stylesheet_link_tag 'static_pages/sign'
= render "layouts/header"
.span9
  %div.form-signin
    %h3.form-signin-heading Forgot your password?
    = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = devise_error_messages!
      %div
        = f.text_field :email, :autofocus => true, :placeholder => "Email", class: "input-block-level"
      = f.submit "Send me instructions", class: "btn btn-large btn-primary"
      %br
      %br
      = render "devise/shared/links"