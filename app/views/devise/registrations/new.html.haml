= render "layouts/header"
.span9
  %div.form-signin
    %h2.form-signin-heading Sign up
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!
      %div
        = f.text_field :email, :autofocus => true, :placeholder => "Email address", class: "input-block-level"
      %div
        = f.password_field :password, :placeholder => "Password", class: "input-block-level"
      %div
        = f.password_field :password_confirmation, :placeholder => "Confirmation", class: "input-block-level"
      %div
        = f.file_field :avatar
      %br  
      = f.submit "Sign up", class: "btn btn-large btn-primary"
      %br
      %br
      = render "devise/shared/links"