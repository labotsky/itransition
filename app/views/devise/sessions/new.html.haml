= render "layouts/header"
.span9
  %div.form-signin
    %h2.form-signin-heading=t('signin_d')
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %div       
        = f.text_field :email, :autofocus => true, :placeholder => "Email address", class: "input-block-level"
      %div        
        = f.password_field :password, :placeholder => "Password", class: "input-block-level"
      - if devise_mapping.rememberable?
        %div
          %label.checkbox
            = f.check_box :remember_me
            =t('remember_d')
      = f.submit t('signin_d'), class: "btn btn-large btn-primary"
      %br
      %br
      = render "devise/shared/links"