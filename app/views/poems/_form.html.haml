= form_for @poem do |f|
  - if @poem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poem.errors.count, "error")} prohibited this poem from being saved:"
      %ul
        - @poem.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
