= form_for @poem do |f|
  - if @poem.errors.any?
    #error_explanation
      %h2= "#{pluralize(@poem.errors.count, "error")} prohibited this poem from being saved:"
      %ul
        - @poem.errors.full_messages.each do |msg|
          %li= msg
  .field
  = f.label :name
  = f.text_field :name, autofocus: true      
  .field
    = f.label :description
    = f.text_area :description, rows: 5
  .field
    = f.label :body
    = f.text_area :body, rows: 10
  .actions
    = button_tag class: "btn btn-small btn-info" do
      <i class='icon-edit'></i> Update