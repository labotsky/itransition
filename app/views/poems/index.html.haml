  - @poems.each do |poem|
    %tr
      %td= poem.description
      %td= poem.body
      %td= link_to 'Show', poem
      %td= link_to 'Edit', edit_poem_path(poem)
      %td= link_to 'Destroy', poem, :method => :delete, :data => { :confirm => 'Are you sure?' }

